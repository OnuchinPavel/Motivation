<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/imagePhoto" />

    <TextView
        android:textSize="12dp"
        android:text="История Успеха"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePhoto"
        android:layout_toEndOf="@+id/imagePhoto"
        android:layout_marginStart="20dp"
        android:id="@+id/textViewInfo" />

    <TextView
        android:textSize="18dp"
        android:text="Илон Маск"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:layout_alignBottom="@+id/imagePhoto"
        android:layout_alignStart="@+id/textViewInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_36dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/textViewName"
        android:layout_alignParentEnd="true" />


</RelativeLayout>